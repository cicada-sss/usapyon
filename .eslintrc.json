{
  "extends": ["eslint:all"],
  "plugins": ["react"],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "globals": {},
  "rules": {
    "indent": [1, 2],
    "padded-blocks": [1, "never"],
    "object-curly-spacing": [1, "always"],
    "no-alert": 0,
    "id-length": [1, { "exceptions": ["e"] }],
    "arrow-parens": [1, "as-needed"],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "no-extra-parens": ["error", "all", { "ignoreJSX": "all" }],
    "sort-imports": 0,
    "quote-props": 0
  }
}
